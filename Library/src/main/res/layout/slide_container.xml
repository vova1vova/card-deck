<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/card_3_slide"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.snaprix.carddecklibrary.views.SlideLayer
            android:id="@+id/card_3_interact"
            android:layout_width="@dimen/sub_menu_width"
            android:layout_height="match_parent"
            app:isTouchModeEnabled="false"
            app:layerNumber="3"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/card_2_slide"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.snaprix.carddecklibrary.views.SlideLayer
            android:id="@+id/card_2_interact"
            android:layout_width="@dimen/menu_width"
            android:layout_height="match_parent"
            app:isTouchModeEnabled="false"
            app:layerNumber="2"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/card_1_slide"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.snaprix.carddecklibrary.views.SlideLayer
            android:id="@+id/card_1_interact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:isTouchModeEnabled="true"
            app:layerNumber="1"/>
    </FrameLayout>
</merge>